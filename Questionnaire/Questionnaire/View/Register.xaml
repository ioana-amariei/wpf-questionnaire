<Window x:Class="Questionnaire.View.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Questionnaire.View"
        mc:Ignorable="d"
        Title="Register" Height="450" Width="800">
    
    <StackPanel Orientation="Vertical">
        
        <TextBlock FontSize="12" FontWeight="Bold" Padding="3" Margin="20 0 20 0">Name</TextBlock>

        <ComboBox Name="ChooseComplexity" 
                  Margin="20 0 20 20" 
                  Padding="5"
                  FontWeight="Normal"
                  FontSize="12">
            <ComboBoxItem IsSelected="True">1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
        </ComboBox>

        <Button Name="StartQuestionnaire"
                Click="StartQuestionnaire_OnClick"
                Padding="10" Margin="20 20 10 10"
                Content="Start" Background="CornflowerBlue" 
                FontWeight="DemiBold" 
                Width="100" />

    </StackPanel>
</Window>
